body:
    .editor:
        position: fixed
        z-index: 12
        background: black
        
        .t-content:
            position: relative
            height: 100%
            
            .t-field:
                clear: both
            
            .break:
                clear: both
                border-bottom: 1px solid #333
            
            label:
                color: #AAA
                display: block
                float: left
                width: 30%
                padding: 8px
                border-right: 1px solid #333
                margin-right: 10px
                font-family: "futura-pt", sans-serif
                font-size: 18px
                text-transform: lowercase
            
            select:
                font-size: 12px
                padding: 2px
                margin-top: 9px
                margin-left: 5px
                width: 50%
            
            textarea:
                width: 100%
                background-color: #222
                color: white
                border: 0px
                font-family: "adobe-garamond-pro",serif;
                resize: none
            
            input[type=text]:
                width: 49%
                background: #222
                color: white
                font-family: "futura-pt", serif;
                border: 0
                padding: 5px 4px 3px
                margin-top: 4px
                font-size: 16px
            